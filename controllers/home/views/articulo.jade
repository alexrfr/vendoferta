extends ../../../layouts/main

block content
	.section.center
		h3.header #{titulo}
		p.descripcion #{descripcion}
		h5 #{precio}€
		br
		.botoncontacto.enlaceboton 
			a(href="/contacto") Solicitar información
		br
			
		- if (categorias)
			- each categoria in categorias
				a(href="/categoria/#{categoria}") #{categoria} 


	.three.columns
		p 

	.ten.columns.center
		
		- if (fotos)
			- each foto in fotos
				img.foto(src='/photos/#{foto}')

